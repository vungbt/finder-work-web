    "clsx": "^2.0.0",
    "countries-and-timezones": "^3.6.0",
    "date-fns": "^3.0.6",
    "formik": "^2.4.5",
    "framer-motion": "^11.0.3",
    "graphql": "^16.8.1",
    "graphql-request": "^5.1.0",
    "jsoneditor": "^10.0.2",
    "lodash": "^4.17.21",
    "next": "14.0.4",
    "next-auth": "^4.24.5",
    "next-intl": "^3.4.0",
    "nprogress": "^0.2.0",
    "react": "^18",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
