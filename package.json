    "react-spring": "^9.7.3",
    "redux-state-sync": "^3.1.4",
    "rxjs": "^7.8.1",
    "subscriptions-transport-ws": "^0.11.0",
    "swiper": "^11.0.5",
    "usehooks-ts": "^2.9.1",
    "yup": "^1.3.3"
